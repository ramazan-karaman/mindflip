{
  "expo": {
    "name": "MindFlip",
    "slug": "mindflip",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mindflip",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.blackman47.project1",
      "infoPlist": {
        "CFBundleDocumentTypes": [
          {
            "CFBundleTypeName": "CSV File",
            "LSItemContentTypes": [
              "public.comma-separated-values-text",
              "text/csv"
            ],
            "LSHandlerRank": "Owner"
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.blackman47.project1",
      "intentFilters": [
        {
          "action": "SEND",
          "data": {
            "mimeType": "text/*"
          }
        },
        {
          "action": "SEND",
          "data": {
            "mimeType": "text/csv"
          }
        },
        {
          "action": "SEND",
          "data": {
            "mimeType": "text/comma-separated-values"
          }
        },
        {
          "action": "SEND",
          "data": {
            "mimeType": "application/csv"
          }
        },
        {
          "action": "SEND",
          "data": {
            "mimeType": "application/vnd.ms-excel"
          }
        }
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-sqlite",
      "expo-document-picker",
      [
        "expo-share-intent",
        {
          "android": {
            "disableAdditionalIntentFilters": true
          },
          "ios": {
            "activationRules": {
              "predicates": "ANY $attachment.registeredTypeIdentifiers UTICONFORMSTO \"public.comma-separated-values-text\""
            }
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": false
    }
  }
}